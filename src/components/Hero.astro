---

const {title} = Astro.props

---


<section class="hero__container">
  <div class="hero__interior">
    <div class="hero__comps">
        <img
          class="img__hero-int"
          src="/assets/icons/civilizations.svg"
          alt="iconohero"
        />
        <h1 class="hero__h1">{title}</h1>   
    </div>
  </div>
</section>

<style>

  .hero__container {
    background-image: url(/assets/img/default-title-bg.webp);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    width: 100%;
    height: 200px;
    border: 4px solid;
    border-image: linear-gradient(
        to right,
        transparent,
        rgba(184, 134, 45, 1),
        transparent
      )
      1;
    border-top: none;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero__interior {
    width: 100%;
    background: linear-gradient( 89deg , rgba(4, 32, 59, 0) 0% , rgba(0, 29, 52, 0.8) 28% , rgba(0, 29, 52, 0.9) 68% , rgba(4, 32, 59, 0) 100% );
    border: 4px solid;
    border-image: linear-gradient(
        to right,
        transparent,
        rgba(184, 134, 45, 1),
        transparent
      )
      1;


  }

  .hero__comps {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .hero__img-int{
    width: 45px;
    height: 45px;
  }

  .hero__h1{
    font-size: 3rem;
  }
</style>
